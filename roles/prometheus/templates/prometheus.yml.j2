global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    metrics_path: /prometheus/metrics
    static_configs:
      - targets: ['localhost:9090']

  - job_name: linux
    static_configs:
      - targets:
          {% for vm in groups['all'] %}
          - '{{ vm }}:9100'
          {% endfor %}

  - job_name: bind9
    static_configs:
      - targets:
          {% for vm in groups['dns_servers'] %}
          - '{{ vm }}:{{ bind9_prom_port }}'
          {% endfor %}

  - job_name: mysql
    static_configs:
      - targets:
          {% for vm in groups['db_servers'] %}
          - '{{ vm }}:{{ mysql_prom_port }}'
          {% endfor %}

  - job_name: nginx
    static_configs:
      - targets:
          {% for vm in groups['all'] %}
          - '{{ vm }}:{{ nginx_prom_port }}'
          {% endfor %}

